@model Product

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2 text-center">Edit Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form asp-action="SaveEdit" asp-controller="Product" asp-route-id="@Model.Id" method="post">
			@* <input asp-for="Id" hidden /> *@
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow name-textbox" />
					<label asp-for="Title" class="ms-2"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" class="form-control border-0 shadow order-textbox"></textarea>
					<label asp-for="Description" class="ms-2"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" class="form-control border-0 shadow order-textbox" />
					<label asp-for="ISBN" class="ms-2"></label>
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow order-textbox" />
					<label asp-for="Author" class="ms-2"></label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" class="form-control border-0 shadow order-textbox" />
					<label asp-for="ListPrice" class="ms-2"></label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price" class="form-control border-0 shadow order-textbox" />
					<label asp-for="Price" class="ms-2"></label>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" class="form-control border-0 shadow order-textbox" />
					<label asp-for="Price50" class="ms-2"></label>
					<span asp-validation-for="Price50" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" class="form-control border-0 shadow order-textbox" />
					<label asp-for="Price100" class="ms-2"></label>
					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>
				<div class="row mt-3 buttons">
					<div class="col-6 col-md-3 update-button">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6 col-md-3 back-button">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<style>
	:root {
		--main-color: gray;
	}

	.buttons {
		display: flex;
		justify-content: space-around;
		margin-top: 60px;
	}

		.buttons .back-button a {
			background-color: lightgray;
		}

		.buttons .back-button a:hover {
			background-color: var(--main-color);
		}

	.form-control.name-textbox:focus,
	.form-control.order-textbox:focus {
		border: 1px solid var(--main-color);
		box-shadow: none;
	}
</style>
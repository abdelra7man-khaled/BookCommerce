@model Category

<form asp-action="ConfirmDelete" asp-controller="Category" asp-route-id="@Model.Id" method="post">
	@* <input asp-for="Id" hidden /> *@
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary text-center">Delete Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" disabled class="form-control name-textbox" />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" disabled class="form-control order-textbox" />
		</div>
		<div class="row buttons">
			<div class="col-6 col-md-3 update-button">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3 back-button">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back</a>
			</div>
		</div>
	</div>
</form>


<style>
	:root {
		--main-color: gray;
	}

	.buttons {
		display: flex;
		justify-content: space-around;
		margin-top: 60px;
	}

		.buttons .back-button a {
			background-color: lightgray;
		}

			.buttons .back-button a:hover {
				background-color: var(--main-color);
			}

	.form-control.name-textbox:focus,
	.form-control.order-textbox:focus {
		border: 1px solid var(--main-color);
		box-shadow: none;
	}
</style>